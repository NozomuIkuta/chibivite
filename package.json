  "version": "0.0.0",
  "description": "An online guidebook to implement minimal Vite from scratch",
  "author": "Nozomu Ikuta",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@9.0.6",
  "scripts": {
    "prepare": "husky",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
