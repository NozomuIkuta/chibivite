    "@eslint/js": "^9.0.0",
    "commitlint": "^19.2.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0",
    "vitepress": "^1.1.4"
